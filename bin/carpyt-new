#!/usr/bin/env python

"""A module creation tool for Python."""

import argparse
import pathlib

import carpyt


def main(args):
    """Runs carpyt-new, creating a new module."""
    path = pathlib.Path(args.template_path)
    tree = carpyt.run_template_parser(path, template_name=args.name)
    tree.make(pathlib.Path('.').resolve())
    return


if __name__ == '__main__':
    description = 'Carpyt - A tool for generating file structures.'
    parser = argparse.ArgumentParser(description=description)
    parser.add_argument('name', type=str, help='Name of new module',
                        action='store')
    parser.add_argument('-t', '--template', type=str,
                        help='Path to template file.', action='store',
                        dest='template_path')
    args = parser.parse_args()
    main(args)
